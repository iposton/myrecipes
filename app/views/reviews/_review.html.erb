<div class="row">
	<div class="well">
<p>
  <strong><%= review.chef %></strong> says: <%= review.body %>
</p>
<p>
		<% if logged_in? and current_user.admin? %>
	  <%= link_to '[Destroy Review]', [review.recipe, review],
               method: :delete,
               data: { confirm: 'Are you sure you want to delete this review?' } %>
               <% end %>
</p>
	<p>
			<span class="quiet"><small> created: <%= time_ago_in_words(review.created_at) %> ago,</small></span>
			<span class="quiet"><small> updated: <%= time_ago_in_words(review.updated_at) %> ago</small></span>
		</p>
<% if logged_in? and(review.chef == current_user || current_user.admin?) %>
<td><%= link_to 'Edit', ""%></td>
      <td><%= link_to 'Destroy', "",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
 <% end %>
	</div>
</div>