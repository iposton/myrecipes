<header class="navbar navbar-fixed-top navbar-default">
	<div class="container">
		<%= link_to "MyRecipes", root_path, class: "btn btn-lg boder-blue-logo", id: "logo" %>
			<div class="nav_item">
				<%= link_to "link 1", "", class: "btn btn-default border-blue" %>
			</div>
			<div class="nav_item">
				<%= link_to "link 2", "", class: "btn btn-default border-blue" %>
			</div>
			<% if logged_in? %>
			<div class="nav_item">
				<%= link_to "New Recipe", new_recipe_path, class: "btn btn-default border-blue" %>
			</div>
			<ul class="nav_item">
				<li class="dropdown">
					<%= link_to "#", class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
					<%= current_user.chefname %> <b class="caret"></b>
					<% end %>
					<ul class="dropdown-menu">
						<li><%= link_to "View Profile", chef_path(current_user) %></li>
						<li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
						<li class="divider"></li>
						<li><%= link_to "Logout", logout_path %></li>
					</ul>
				</li>
			</ul>
			<% else %>
			<div class="nav_item">
				<%= link_to "Log In", login_path, class: "btn btn-default btn-success" %>
			</div>
			<% end %>		
	</div> <!-- end container -->
</header>